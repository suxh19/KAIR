{
  "task": "swinir_ct_artifact",
  "model": "plain",
  "gpu_ids": [0, 1, 2, 3],
  "dist": true,

  "scale": 1,
  "n_channels": 1,

  "path": {
    "root": "ct_artifact",
    "pretrained_netG": null,
    "pretrained_netE": null
  },

  "datasets": {
    "train": {
      "name": "train_dataset",
      "dataset_type": "plain",
      "dataroot_H": "trainsets/CT_Artifact/train/H",
      "dataroot_L": "trainsets/CT_Artifact/train/L",

      "H_size": 64,
      "dataloader_shuffle": true,
      "dataloader_num_workers": 8,
      "dataloader_batch_size": 8      
    },
    "test": {
      "name": "test_dataset",
      "dataset_type": "plain",
      "dataroot_H": "trainsets/CT_Artifact/test/H",
      "dataroot_L": "trainsets/CT_Artifact/test/L"
    }
  },

  "netG": {
    "net_type": "swinir",
    "upscale": 1,
    "in_chans": 1,
    "img_size": 64,
    "window_size": 8,
    "img_range": 1.0,
    "depths": [6, 6, 6, 6, 6, 6],
    "embed_dim": 180,
    "num_heads": [6, 6, 6, 6, 6, 6],
    "mlp_ratio": 2,
    "upsampler": null,
    "resi_connection": "1conv",

    "init_type": "default"
  },

  "train": {
    "G_lossfn_type": "charbonnier",
    "G_lossfn_weight": 1.0,
    "G_charbonnier_eps": 1e-9,

    "E_decay": 0.999,

    "G_optimizer_type": "adam",
    "G_optimizer_lr": 2e-4,
    "G_optimizer_wd": 0,

    "G_scheduler_type": "MultiStepLR",
    "G_scheduler_milestones": [250000, 400000, 450000, 475000, 500000],
    "G_scheduler_gamma": 0.5,

    "G_param_strict": true,
    "E_param_strict": true,

    "checkpoint_test": 5000,
    "checkpoint_save": 5000,
    "checkpoint_print": 200
  }
}