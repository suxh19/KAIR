{
  "task": "swinir_ct_artifact"     
  , "model": "plain" 
  , "gpu_ids": [0, 1, 2, 3]
  , "dist": true

  , "scale": 1       // 关键参数：不进行缩放
  , "n_channels": 1  // CT通常是单通道，如果是伪彩色则设为3

  , "path": {
    "root": "ct_artifact"            
    , "pretrained_netG": null      
    , "pretrained_netE": null      
  }

  , "datasets": {
    "train": {
      "name": "train_dataset"
      , "dataset_type": "plain"    // 关键参数：使用 plain 数据集类型
      , "dataroot_H": "trainsets/CT_Artifact/train/H"  // 你的GT路径
      , "dataroot_L": "trainsets/CT_Artifact/train/L"  // 你的输入路径

      , "H_size": 64                    // 训练时的patch大小
      , "dataloader_shuffle": true
      , "dataloader_num_workers": 8
      , "dataloader_batch_size": 4      
    }
    , "test": {
      "name": "test_dataset"            
      , "dataset_type": "plain"         
      , "dataroot_H": "trainsets/CT_Artifact/test/H"    // 测试GT路径
      , "dataroot_L": "trainsets/CT_Artifact/test/L"    // 测试输入路径
    }
  }

  , "netG": {
    "net_type": "swinir" 
    , "upscale": 1 
    , "in_chans": 1 
    , "img_size": 64 
    , "window_size": 8  
    , "img_range": 1.0 
    , "depths": [6, 6, 6, 6, 6, 6] 
    , "embed_dim": 180 
    , "num_heads": [6, 6, 6, 6, 6, 6]
    , "mlp_ratio": 2 
    , "upsampler": null                 // 不使用上采样
    , "resi_connection": "1conv"        

    , "init_type": "default"
  }

  , "train": {
    "G_lossfn_type": "charbonnier"      // 或 "l1"
    , "G_lossfn_weight": 1.0            
    , "G_charbonnier_eps": 1e-9

    , "E_decay": 0.999                  

    , "G_optimizer_type": "adam"        
    , "G_optimizer_lr": 2e-4            
    , "G_optimizer_wd": 0               

    , "G_scheduler_type": "MultiStepLR" 
    , "G_scheduler_milestones": [250000, 400000, 450000, 475000, 500000]
    , "G_scheduler_gamma": 0.5

    , "G_param_strict": true
    , "E_param_strict": true

    , "checkpoint_test": 5000           
    , "checkpoint_save": 5000           
    , "checkpoint_print": 200           
  }
}